alias vi='nvim'
alias ls='exa'
alias ll='ls -lah'
alias l='ls -lah'

alias mk='mkdir -p'

alias t='tig'

alias cls='clear'
alias copy='pbcopy'
alias vg='vagrant'

alias treed='tree -d'
alias treef='tree -f'
alias treel='tree -L'

alias g='git'
alias gst='git status'
alias gp='git pull'
alias gck='git checkout'
alias gnoedit='git commit --no-edit'
alias gcm='git commit -am'
alias gcam='git commit -am'
alias gtree='git log --graph --simplify-by-decoration --pretty=format:'%d' --all'

alias gsh='git log -1 --pretty=format:%h'

alias j='jwtcli'
